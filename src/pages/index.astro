---
import Layout from "@/layouts/Layout.astro";
import ImageUpload from "@/components/upload.tsx";
---

<Layout title="MenuVision">
  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <div class="relative isolate overflow-hidden">
      <!-- Gradient overlay -->
      <div
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      >
        <div
          class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-orange-200 to-orange-400 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
        >
        </div>
      </div>

      <!-- Background image -->
      <div
        class="absolute inset-0 -z-20"
        style="background-image: url('/img/menu.png'); background-size: contain; background-position: center;"
      >
      </div>

      <!-- Optional: Dark overlay to improve text readability -->
      <div class="absolute inset-0 -z-10 bg-black/40"></div>

      <div class="mx-auto max-w-6xl px-6 py-24 sm:py-32 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
            Create Stunning Restaurant Menu Images
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-200 max-w-xl mx-auto">
            Transform your menu into beautiful, social media-ready images with
            our AI-powered generator. Perfect for restaurants, cafes, and food
            businesses.
          </p>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 pt-4 pb-24" id="generate">
      <ImageUpload client:load />
    </div>

    <!-- Features Section -->
    <div id="features" class="bg-gray-50 py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-base font-semibold leading-7 text-orange-500">
            Features
          </h2>
          <p
            class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
          >
            Everything you need to create perfect menu images
          </p>
        </div>

        <div class="mx-auto mt-16 max-w-5xl sm:mt-20">
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-3 lg:gap-y-16"
          >
            <div class="relative pl-16">
              <dt class="text-base font-semibold leading-7 text-gray-900">
                <div
                  class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-500"
                >
                  <svg
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42"
                    ></path>
                  </svg>
                </div>
                Customizable Templates
              </dt>
              <dd class="mt-2 text-base leading-7 text-gray-600">
                Choose from various professional templates designed specifically
                for restaurants.
              </dd>
            </div>

            <div class="relative pl-16">
              <dt class="text-base font-semibold leading-7 text-gray-900">
                <div
                  class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-500"
                >
                  <svg
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                Instant Generation
              </dt>
              <dd class="mt-2 text-base leading-7 text-gray-600">
                Generate beautiful menu images in seconds with our advanced AI
                technology.
              </dd>
            </div>

            <div class="relative pl-16">
              <dt class="text-base font-semibold leading-7 text-gray-900">
                <div
                  class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-500"
                >
                  <svg
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"
                    ></path>
                  </svg>
                </div>
                Easy Export
              </dt>
              <dd class="mt-2 text-base leading-7 text-gray-600">
                Download your menu images in multiple formats, perfect for
                social media and printing.
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </main>
</Layout>
